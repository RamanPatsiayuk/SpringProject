<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="com.spring.models.Client">
        <constructor-arg type="java.lang.Integer" value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="event" class="com.spring.models.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date" scope="prototype"/>
        </constructor-arg>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean id="eventLogger" class="com.spring.logger.ConsoleEventLogger"/>
    <bean id="eventLogger" class="com.spring.logger.FileEventLogger" init-method="init" destroy-method="destroy">

    </bean>

    <bean id="app" class="com.spring.app.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

</beans>